                        @Html.EditorFor(model => model.Nguoi.Gioitinh, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nguoi.Gioitinh, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Nguoi.NgaySinh, htmlAttributes: new { @class = "control-label col-md-2" })

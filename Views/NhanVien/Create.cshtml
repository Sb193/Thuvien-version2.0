                        @Html.EditorFor(model => model.Nguoi.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nguoi.HoTen, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Nguoi.Gioitinh, htmlAttributes: new { @class = "control-label col-md-2" })

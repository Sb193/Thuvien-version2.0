                    @Html.LabelFor(model => model.Nguoi.Sdt, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Nguoi.Sdt, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nguoi.Sdt, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!--End Form-->
                <div class="form-group d-flex align-items-center">
                    <div class="col-md-offset-2 col-md-5 text-right">
                        <input type="submit" value="Thêm" class="btn btn-primary pl-3 pr-3" />
                    </div>

                    <div class="col-md-offset-2 col-md-5 ">
                        @Html.ActionLink("Trở lại", "Index", null, new { @class = "btn btn-default h4 pl-3 pr-3" })
                    </div>
                </div>


            </div>





        </div>
    }



</div>





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

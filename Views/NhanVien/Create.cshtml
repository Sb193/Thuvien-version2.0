@model QuanLyThuVien.Models.NhanVien

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Thêm nhân viên</h2>


<div class="card shadow mb-4 ">
